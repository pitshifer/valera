{% extends 'base.html.twig' %}

{% block title %}Hello {{ parent() }}{% endblock %}

{% block body %}

<div class="row">
    <div class="col-lg-4">
        <div class="widget navy-bg p-lg text-center">
            <div class="m-b-md">
                <i class="fa fa-bell fa-4x"></i>
                <h1 class="m-xs">{{ lastTemperature.getValue() }}</h1>
